<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ppl.b08.warunglaundry.view.pengguna.CreditActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/profileimage1"
        android:src="@drawable/truc_ico"
        android:layout_marginBottom="0px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profileimage1"
        android:id="@+id/credit2"
        android:textSize="28dp"

        android:textColor="@color/colorAccent"
        android:text="Sorry This Feature Not Available Yet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginTop="0dp"

        android:layout_below="@+id/credit2"
        android:textSize="50dp"
        android:text="0"/>
</RelativeLayout>